@model IEnumerable<MediaPustaka.net.Models.InvoiceModel>

@{
    ViewBag.Title = "Invoice";
}

<div style="margin:5% 40% 0% 33%;float:left; width:500px; box-shadow:0 0 3px #aaa; height:auto;color:#000;">
    <div style="width:100%; padding:10px; float:left; background:#1ca8dd; color:#fff; font-size:30px; text-align:center;">
        Invoice
    </div>
    <div style="width:100%; padding:0px 0px;border-bottom:1px solid rgba(0,0,0,0.2);float:left;">
        <div style="width:30%; float:left;padding:10px;">

            <span style="font-size:14px;float:left; width:100%;">
               Nama : @Html.DisplayFor(x => x.Last().User)
            </span>
            <span style="font-size:14px;float:left;width:100%;">
                Kasir : @Html.DisplayFor(x => x.Last().Kasir)
                Metode Pembayaran : @Html.DisplayFor(x => x.Last().Pembayaran)
            </span>
            <span style="font-size:14px;float:left;width:100%;">
                @ViewBag.Email
            </span>
        </div>

        <div style="width:40%; float:right;padding:">
            <span style="font-size:14px;float:right;  padding:10px; text-align:right;">
                <b>Date : </b>@Convert.ToString(string.Format("{0:dd/MM/yyyy}", Model.Last().Tanggal))
            </span>
            <span style="font-size:14px;float:right;  padding:10px; text-align:right;">
                <b>Invoice# : </b>MPN-@Html.DisplayFor(x => x.Last().ID)
            </span>
        </div>
    </div>




    <div style="width:100%; padding:0px; float:left;">

        <div style="width:100%;float:left;background:#efefef;">
            <span style="float:left; text-align:left;padding:10px;width:50%;color:#000;font-weight:600;">
                Decription
            </span>
            <span style="font-weight:600;float:left;padding:10px ;width:40%;color:#000;text-align:right;">
                Amount
            </span>
        </div>

        <div style="width:100%;float:left;color:#000;">
            <span style="float:left; text-align:left;padding:10px;width:50%;color:#000;">
                Books


                <span style="font-size:10px; float:left; width:100%;color:#000;">
                    (@Html.DisplayFor(x => x.Last().Jumlah_Buku) pcs)
                </span>
            </span>
            <span style="font-weight:normal;float:left;padding:10px ;width:40%;color:#000;text-align:right;">
                Rp. @Html.DisplayFor(x => x.Last().Jumlah_Harga)
            </span>
        </div>
        <div style="width:100%;float:left;">
            <span style="float:left; text-align:left;padding:10px;width:50%;color:#000;">
                Discount
                <span style="font-size:10px; float:left; width:100%;">
                    (@Html.DisplayFor(x => x.Last().Diskon)%)
                </span>
            </span>
            <span style="font-weight:normal;float:left;padding:10px ;width:40%;color:#000;text-align:right;">
                Rp. @Session["Diskon"].ToString();
                Rp. @Session["Diskon"];
            </span>
        </div>

        <div style="width:100%;float:left; background:#fff;">

            <span style="font-weight:600;float:right;padding:10px 0px;width:40%;color:#000;text-align:center;">
                Total : Rp. @Html.DisplayFor(x => x.Last().Total)
            </span>
        </div>
    </div>
</div>

