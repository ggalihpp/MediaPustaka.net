@model IEnumerable<MediaPustaka.net.Models.ShoppingCart>

@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Cart</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_Cart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._discount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._shelves)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Book_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceAD)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID_Cart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._discount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._shelves)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Book_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceAD)
        </td>
       
    </tr>
}

</table>
